# Maintainer: graysky <graysky AT archlinux DOT us>
# Adapted for Manjaro by Kf4btg AT Github

pkgname='clean-chroot-manager'
pkgver=2.56
pkgrel=1
pkgdesc='Wrapper scripts for managing clean chroots (64-bit and 32-bit).'
arch=('any')
url='https://github.com/graysky2/clean-chroot-manager'
license=('MIT')
depends=('coreutils' 'devtools' 'grep' 'ncurses' 'sed')
conflicts=('clean_chroot_manager')
replaces=('clean_chroot_manager')
source=("http://repo-ck.com/source/$pkgname/$pkgname-$pkgver.tar.xz"
		  "manjaro-nspawn"
		  "ccm-manjaro.patch")
sha256sums=('712a6b01a5989bda7dcc2853c89d08109dc9c909114a7f8284a98d147b0d02cc'
	'827def8896878632a21b57fa62ae8f9119312ba414d2fab59d642649ceebca6d'
	'ba8a71bd6acd21eb414857365bb2506e479d6b7ee307379dec9942565a350430')
install=ccm.install

build() {
  cd "$pkgname-$pkgver"
  patch -p1 < "$srcdir/ccm-manjaro.patch"
  make
}

package() {
  cd "$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
  install -Dm644 MIT "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
  install -D "$srcdir/manjaro-nspawn" "$pkgdir/usr/bin/manjaro-nspawn"
}
